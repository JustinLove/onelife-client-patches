+typedef enum interactionKeyType {
+    IK_MOVE,
+    IK_RUN,
+    IK_USE,
+    IK_DROP,
+    IK_REMV,
+    IK_SELF,
+    IK_UOTHER,
+    IK_KILL,
+    IK_EXAMINE,
+    IK_BP_USE,
+    IK_BP_DROP,
+    IK_BP_SREMV,
+    IK_COUNT,
+    } interactionKeyType;
+
+static int interactionKeysEnabled = 1;
+static char interactionKeys[IK_COUNT] = {
+    'q', // IK_MOVE
+    'a', // IK_RUN
+    'f', // IK_USE
+    'd', // IK_DROP
+    's', // IK_REMV
+    'v', // IK_SELF

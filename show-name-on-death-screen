+char *LivingLifePage::getName() {
+    LiveObject* ourLiveObject = getOurLiveObject();
+    if ( ourLiveObject != NULL && ourLiveObject->name != NULL ) {
+            return stringDuplicate( ourLiveObject->name );
+        } else {
+            return NULL;
+        }
+    }

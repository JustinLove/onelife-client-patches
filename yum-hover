+static yumType isYummy( int inObjectID ) {
+    if( inObjectID < 0 ) {
+        return YT_INEDIBLE;
+        }
+
+    int objectID = becomesFoodID[inObjectID];
+
+    if( objectID < 0 ) {
+        return YT_INEDIBLE;
+        }
+
+    ObjectRecord *o = getObject( objectID );
+
+    if( o == NULL ) {
+        return YT_INEDIBLE;
+        }
+
+    for( int i=0; i<yummyFoodChain.size(); i++ ) {
+        if( objectID == yummyFoodChain.getElementDirect(i) ) {
+            return YT_MEH;
+            }
+        }
+    return YT_YUM;
+    }

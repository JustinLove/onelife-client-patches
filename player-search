+void LivingLifePage::playerTrack() {
+    PersonHitRecord p;
+    checkForPersonHit(p);
+    if( p.targetID > 0 ) {
+        LiveObject* target = getLiveObject( p.targetID );
+        if( target ) {
+            addTempLocationSlip(
+                target->xd, target->yd,
+                true, target->id,
+                textBaby,
+                0);
+            }
+        }
+    }
+

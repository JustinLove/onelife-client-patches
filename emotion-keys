+    // now read emotion keys
+
+    cont = SettingsManager::getSettingContents( "emotionKeys", "" );
+
+    if( strcmp( cont, "" ) == 0 ) {
+        delete [] cont;
+        return;
+        }
+
+    parts = split( cont, "\n", &numParts );
+    delete [] cont;
+
+    for( int i=0; i<numParts; i++ ) {
+        if( strcmp( parts[i], "" ) != 0 ) {
+
+            Emotion *e;
+
+            if( i < emotions.size() ) {
+                e = emotions.getElement( i );
+                e->triggerKey = parts[i][0];
+                }
+            else {
+                break;
+                }
+            }
+        delete [] parts[i];
+        }
+    delete [] parts;

+// -1 if no emotion triggered
+int getEmotionIndexForKey( char inKey ) {
+    inKey = tolower( inKey );
+    
+    for( int i=0; i<emotions.size(); i++ ) {
+        
+        if( emotions.getElement(i)->triggerKey == inKey ) {
+            return i;
+            }
+        }
+    
+    return -1;
+    }
+
